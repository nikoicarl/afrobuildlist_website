<h1>Checkout</h1>

<h2>User Info</h2>
<p>Name: <%= user.name %></p>
<p>Email: <%= user.email %></p>
<p>Phone: <%= user.phone %></p>

<h2>Cart</h2>
<ul>
    <% Object.keys(cart).forEach(id => { 
        const item = cart[id]; %>
        <li>
            <strong><%= item.name %></strong> — 
            Qty: <%= item.quantity %>, 
            Price: GH₵<%= item.price.toFixed(2) %>, 
            Subtotal: GH₵<%= (item.price * item.quantity).toFixed(2) %>
        </li>
    <% }) %>
</ul>

<h3>Total: GH₵<%= Object.values(cart).reduce((sum, item) => sum + item.price * item.quantity, 0).toFixed(2) %></h3>
