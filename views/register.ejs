<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AfroBuildList - Register Service</title>

    <!-- Favicons & Styles -->
    <link rel="icon" href="assets/img/logo.png" />
    <link rel="apple-touch-icon" href="assets/img/logo.png" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/css/register.css" />
    <!-- SweetAlert2 CSS & JS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body class="body-register">
    <div class="container-fluid">
        <div class="row min-vh-100">
            <div class="col-lg-7 d-none d-lg-block"></div>
            <div class="col-lg-5 d-flex align-items-start justify-content-end py-5 pr-lg-5">
                <div class="glass-box w-100">
                    <div class="register-logo text-center mb-4">
                        <a href="/"> <img src="/assets/img/logo.png" alt="Logo" /></a>
                    </div>
                    <div class="register-title mb-4">Register Business</div>

                    <form id="multiStepForm" novalidate>
                        <!-- Step 1: Personal Info -->
                        <div class="form-step" id="step-1">
                            <div class="mb-3 font-weight-bold">Your Info</div>
                            <select class="form-control mb-3" name="register_category" required>
                                <option value="">Register As ..</option>
                                <!-- Add your categories here -->
                            </select>
                            <input type="text" class="form-control mb-3" name="user_fullname" placeholder="Your Name" required />
                            <input type="email" class="form-control mb-3" name="user_email" placeholder="Your Email" />
                            <input type="text" class="form-control mb-3" name="user_phone" placeholder="Your Phone" />

                            <button type="button" class="register-btn w-100" onclick="goToStep(2)">Next</button>
                        </div>

                        <input type="hidden" name="" class="hidden_service_product">

                        <!-- Step 2: Service Info -->
                        <div class="form-step d-none" id="step-2">
                            <div class="mb-3 font-weight-bold">Service Info</div>
                            <input type="text" class="form-control mb-3" name="service_name" placeholder="Service Name" required />
                            <input type="number" class="form-control mb-3" name="service_price" placeholder="Price (e.g. 100.00)" required step="0.01" />
                            <select class="form-control mb-3" name="category_id" required>
                                <option value="">Select Category</option>
                                <!-- options populated by JS -->
                            </select>
                            <textarea class="form-control mb-3" name="service_description" rows="3" placeholder="Short Description (optional)"></textarea>

                            <div class="custom-control custom-checkbox mb-3">
                                <input type="checkbox" class="custom-control-input" id="termsCheck" required />
                                <label class="custom-control-label" for="termsCheck">I agree to the terms and conditions</label>
                            </div>

                            <div class="d-flex justify-content-between">
                                <button type="button" class="btn btn-outline-secondary register-btn" style="border-radius: 50px; background-color: #706e6e!important;" onclick="goToStep(1)">Back</button>
                                <button type="submit" class="register-btn" style="border-radius: 50px;">Submit</button>
                            </div>
                        </div>
                    </form>

                    <div class="register-footer mt-4">
                        Already registered? <a href="/login">Log in</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- JS Dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script src="/assets/js/env.js"></script>
    <script src="/assets/js/register.js"></script>
</body>

</html>
