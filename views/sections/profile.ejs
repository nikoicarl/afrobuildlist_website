<div class="container-fluid px-4 py-4" style="background-color: #f8f9fa;">
  <div class="row">
    <div class="col-12">
      <h3 class="mb-4 text-dark">My Profile</h3>
    </div>

    <!-- Account Info -->
    <div class="col-lg-6 mb-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Account Information</h5>
          <form id="profileForm">
            <div class="form-group">
              <label for="name">Full Name</label>
              <input type="text" id="name" name="name" class="form-control" placeholder="Enter your full name">
            </div>
            <div class="form-group mt-3">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" class="form-control" placeholder="you@example.com" disabled>
            </div>
            <div class="form-group mt-3">
              <label for="phone">Phone</label>
              <input type="text" id="phone" name="phone" class="form-control" placeholder="Optional">
            </div>
            <button type="submit" class="btn btn-success mt-4 btn-block">Update Profile</button>
          </form>
        </div>
      </div>
    </div>

    <!-- Password Change -->
    <div class="col-lg-6 mb-4">
      <div class="card border-0 shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-3">Change Password</h5>
          <form id="passwordForm">
            <div class="form-group">
              <label for="currentPassword">Current Password</label>
              <input type="password" id="currentPassword" name="currentPassword" class="form-control">
            </div>
            <div class="form-group mt-3">
              <label for="newPassword">New Password</label>
              <input type="password" id="newPassword" name="newPassword" class="form-control">
            </div>
            <div class="form-group mt-3">
              <label for="confirmPassword">Confirm New Password</label>
              <input type="password" id="confirmPassword" name="confirmPassword" class="form-control">
            </div>
            <button type="submit" class="btn btn-dark mt-4 btn-block">Update Password</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
