<div class="service_page_hero">
    <div class="container text-center py-5">
        <h1>Our Services</h1>
    </div>
</div>

<div class="container-fluid bg-light py-5">
    <div class="container">
        <!-- Main Title -->
        <div class="text-center mb-5">
            <h1 class="display-4 fw-bold text-dark">
                Services that fit
                <span style="color: var(--primary-color);">your needs</span>
            </h1>
        </div>

        <!-- Filter Section -->
        <div class="row align-items-center mb-4 gy-3">
            <div class="col-12 col-md-4 d-flex flex-column flex-md-row align-items-center">
                <div class="position-relative me-md-3 w-100" style="max-width: 300px;">
                    <button class="btn btn-outline-secondary d-flex align-items-center w-100"
                        style="border-radius: 10px; padding: 10px 16px;" id="filterBtn" type="button">
                        <i class="fas fa-sliders-h me-2"></i>
                        <span>Filter</span>
                        <span class="badge bg-secondary ms-auto" id="filterCount" style="display: none;">
                            0
                        </span>
                    </button>

                    <div class="position-absolute bg-white border rounded p-3 mt-2" id="filterDropdown"
                        style="width: 100%; z-index: 1050; display: none;">
                        <!-- Category Filter -->
                        <div id="categoryFilterSection" class="mb-3"></div>

                        <!-- Price Range Filter -->
                        <div class="mb-3">
                            <h6>Price Range</h6>
                            <input type="range" class="form-range" min="0" max="200" value="200" id="priceRange" />
                            <div class="d-flex justify-content-between small mt-1">
                                <span>GH₵0</span>
                                <span>Up to GH₵<span id="priceValue">200</span></span>
                            </div>
                            <div class="form-check mt-2">
                                <input class="form-check-input" type="checkbox" value="0-75" id="budget" />
                                <label class="form-check-label" for="budget">
                                    <i class="fas fa-tag me-2"></i>Budget Friendly (Under GH₵75)
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="150-999" id="premium" />
                                <label class="form-check-label" for="premium">
                                    <i class="fas fa-crown me-2"></i>Premium Services (GH₵150+)
                                </label>
                            </div>
                        </div>

                        <!-- Filter Actions -->
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <button class="btn btn-success btn-sm px-3" onclick="applyFilters()" type="button">
                                    <i class="fas fa-check me-1"></i>Apply Filters
                                </button>
                                <button class="btn btn-outline-secondary btn-sm ms-2" onclick="clearFilters()"
                                    type="button">
                                    <i class="fas fa-times me-1"></i>Clear All
                                </button>
                            </div>
                            <small class="text-muted" id="resultCount">Showing all services</small>
                        </div>
                    </div>
                </div>

                <div class="afrobuild_service_page_search-input flex-grow-1">
                    <i class="fas fa-search"></i>
                    <input type="text" class="form-control" placeholder="Search" style="border-radius: 25px;" id="searchInput">
                </div>
            </div>

            <div class="col-12 col-md-8">
                <div class="row align-items-center gy-3">
                    <div class="col-12 col-md-6 text-center text-md-start">
                        <div class="btn-group" role="group" aria-label="Sort buttons">
                            <button type="button" class="btn text-white px-4" data-sort="featured"
                                style="background-color: var(--primary-color); border-color: var(--primary-color); border-radius: 25px 0 0 25px;">
                                Featured
                            </button>
                            <button type="button" class="btn btn-outline-secondary px-4" data-sort="new"
                                style="border-radius: 0;">
                                New
                            </button>
                            <button type="button" class="btn btn-outline-secondary px-4" data-sort="best"
                                style="border-radius: 0;">
                                Best
                            </button>
                            <button type="button" class="btn btn-outline-secondary px-4" data-sort="special"
                                style="border-radius: 0 25px 25px 0;">
                                Special
                            </button>
                        </div>

                    </div>
                    <div class="col-12 col-md-6 text-center text-md-end">
                        <div class="d-flex align-items-center justify-content-center justify-content-md-end gap-2">
                            <small class="text-muted" id="serviceCount">Showing all services</small>
                            <button class="btn btn-outline-secondary rounded-circle" style="width: 40px; height: 40px;"
                                id="prevBtn" type="button" aria-label="Previous">
                                <i class="fas fa-chevron-left"></i>
                            </button>
                            <button class="btn btn-outline-secondary rounded-circle" style="width: 40px; height: 40px;"
                                id="nextBtn" type="button" aria-label="Next">
                                <i class="fas fa-chevron-right"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Active Filters Display -->
        <div id="activeFilters" class="mb-3"></div>

        <!-- Services Grid -->
        <div class="row g-4 mt-2" id="servicesGrid">
            <!-- Service Cards will be populated by JavaScript -->
        </div>

        <!-- No Results Message -->
        <div id="noResults" class="text-center py-5" style="display: none;" role="alert" aria-live="polite">
            <i class="fas fa-search fa-3x mb-3"></i>
            <h4>No services found</h4>
            <p>Try adjusting your filters or search terms to find what you're looking for.</p>
            <button class="btn btn-outline-primary" onclick="clearFilters()" type="button">
                Clear All Filters
            </button>
        </div>

        <!-- Pagination Dots -->
        <div class="text-center mt-5" id="paginationDots">
            <!-- Pagination dots will be populated by JavaScript -->
        </div>
    </div>
</div>